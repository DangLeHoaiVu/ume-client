{
  "extends": "@ume/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*",
        "./common/*"
      ]
    }
  }
}